[alias]
	alias = !git config --global --list | grep ^alias
	br = branch
	ci = commit
	co = checkout
	ctags = !.git/hooks/ctags
	hist = log --graph --pretty=format:'%Cred%h%Creset %Cblue%ad%Creset %s %Cgreen[%an] %C(auto)%d%Creset' --date=human --color=always
	st = status
	pushf = push --force-with-lease
[log]
	date = iso
[rebase]
	autoSquash = true
[pull]
	ff = only
[grep]
	lineNumber = true
	patternType = extended
[merge]
	conflictStyle = diff3
	tool = vimdiff
[init]
	templatedir = ~/.dotfiles/git_template
	defaultBranch = main
# enable delta pager
[core]
	pager = delta

[delta]
	plus-color = "#012800"
	minus-color = "#340001"
	syntax-theme = Monokai Extended
	; line-numbers = true
	; side-by-side = true
	features = line-numbers decorations
	whitespace-error-style = 22 reverse

[delta "decorations"]
	commit-decoration-style = bold yellow box ul

[interactive]
	diffFilter = delta --color-only
# end delta pager

[include]
	path = ~/.gitconfig_local
